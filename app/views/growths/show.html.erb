<div class="growth-detail-container">
  <h2 class="growth-title"><%= @child.nickname %>の成長記録詳細</h2>

  <div class="growth-image">
    <% if @growth.image.attached? %>
      <%= image_tag @growth.image, class: 'growth-image-img' %>
    <% else %>
      <div class="no-image">写真がありません</div>
    <% end %>
  </div>  

  <div class="growth-detail">
    <p><strong>記録日:</strong> <%= @growth.record_date.strftime("%Y年%m月%d日") %></p>
    <p><strong>成長の種類:</strong> <%= @growth.growth_type.name %></p>
    <p><strong>身長:</strong> <%= @growth.height %> cm</p>
    <p><strong>体重:</strong> <%= @growth.weight %> kg</p>
    <p><strong>詳細説明:</strong> <%= @growth.description %></p>

  <div class="actions">
    <%= link_to '編集', edit_child_growth_path(@child, @growth), class: 'btn btn-primary btn-edit' %>
    <%= link_to '削除', child_growth_path(@child, @growth), method: :delete, data: {turbo_method: :delete}, class: 'btn btn-danger btn-delete' %>
    <%= link_to '成長記録一覧に戻る', child_growths_path(@child), class: 'btn btn-secondary' %>
  </div>
</div>
