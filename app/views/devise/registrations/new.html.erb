


<div class="devise-container">
  <h2>新規登録</h2>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

  <%= render 'shared/error_messages', model: f.object %>

      <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :nickname, "ニックネーム" %><br>
      <%= f.text_field :nickname, autofocus: true %>
    </div>

    <div class="field-group">
      <div class="field short-field">
        <%= f.label :family_name, "名字" %><br>
        <%= f.text_field :family_name %>
      </div>

      <div class="field short-field">
        <%= f.label :first_name, "名前" %><br>
        <%= f.text_field :first_name %>
      </div>
    </div>

    <div class="field-group">
      <div class="field short-field">
        <%= f.label :family_name_kana, "名字（カナ）" %><br>
        <%= f.text_field :family_name_kana %>
      </div>

      <div class="field short-field">
        <%= f.label :first_name_kana, "名前（カナ）" %><br>
        <%= f.text_field :first_name_kana %>
      </div>
    </div>

    <div class="field short-field">
      <%= f.label :gender, "性別" %><br>
      <%= f.select :gender, [['設定なし', ''], ['男性', 'male'], ['女性', 'female']], { include_blank: true } %>
    </div>

    <div class="field short-field">
      <%= f.label :birth_day, "生年月日" %><br>
      <%= f.date_select :birth_day, start_year: 1900, end_year: Time.now.year, prompt: { year: '年', month: '月', day: '日' } %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>









