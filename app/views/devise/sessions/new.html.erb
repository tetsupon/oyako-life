
<div class="devise-container">
  <h2>ログイン</h2>
  
  <%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email, id:"email", placeholder:"登録したメールアドレスを入力して下さい", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password, id:"password", placeholder:"登録したパスワードを入力して下さい", autofocus: true %>
    </div>


    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <div class="actions">
    <%= link_to 'トップページに戻る', root_path, class: 'btn btn-secondary' %>
  </div>
</div>


