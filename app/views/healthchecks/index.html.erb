<div class="healthchecks-container">
  <h2><%= @child.nickname %>の健康診断記録一覧</h2>

  <%= link_to '健康診断を追加', new_child_healthcheck_path(@child), class: 'btn btn-primary' %>

  <table class="table">
    <thead>
      <tr>
        <th>健康診断の名前</th>
        <th>予定日</th>
        <th>実施日</th>
        <th>担当医師</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
     <% if @healthchecks.present? %>
       <% @healthchecks.each do |healthcheck| %>
         <tr>
           <td><%= healthcheck.checkup_name %></td>
           <td><%= healthcheck.scheduled_date.strftime('%Y年%m月%d日 %H:%M') %></td>
           <td><%= healthcheck.administered_date.strftime('%Y年%m月%d日') %></td>
           <td><%= healthcheck.doctor_name %></td>
           <td><%= link_to '詳細', child_healthcheck_path(@child, healthcheck), class: 'btn btn-primary' %></td>
         </tr>
       <% end %>
     <% else %>
       <tr>
         <td colspan="6">健康診断記録がありません。</td>
       </tr>
     <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= link_to '戻る', child_path(@child), class: 'btn btn-secondary' %>
  </div>
</div>

