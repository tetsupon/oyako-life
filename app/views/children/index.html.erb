<div class="children-container">
  <h1>子供一覧</h1>

  <% if user_signed_in? %>
    <%= link_to '子供追加', new_child_path, class: 'btn btn-primary add-child-button' %>
  <% end %>

  <table class="child-table">
    <thead>
      <tr>
        <th>ニックネーム</th>
        <th>性別</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @children.each do |child| %>
        <tr>
          <td><%= child.nickname %></td>
          <td><%= child.gender_jp %></td>
          <td><%= link_to '詳細', child_path(child), class: 'details-link' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= link_to 'トップページに戻る', root_path, class: 'btn btn-secondary' %>
  </div>
</div>