<div class="vaccinations-container">
  <h2><%= @child.nickname %>の予防接種一覧</h2>

  <table class="table">
    <thead>
      <tr>
        <th>予防接種の名前</th>
        <th>接種予定日</th>
        <th>接種実施日</th>
        <th>詳細</th>
      </tr>
    </thead>
    <tbody>
      <% @vaccinations.each do |vaccination| %>
        <tr>
          <td><%= vaccination.vaccination_name %></td>
          <td><%= vaccination.scheduled_date.strftime('%Y年%m月%d日 %H:%M') %></td>
          <td><%= vaccination.administered_date.strftime('%Y年%m月%d日') %></td>
          <td><%= link_to '詳細', child_vaccination_path(@child, vaccination), class: 'btn btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="actions">
    <%= link_to '予防接種を追加', new_child_vaccination_path(@child), class: 'btn btn-primary' %>
    <%= link_to '戻る', health_management_path(child_id: @child.id), class: 'btn btn-secondary' %>
  </div>
</div>
